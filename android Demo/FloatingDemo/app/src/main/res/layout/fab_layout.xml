<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_Trai"
        android:src="@drawable/chrome"
        android:layout_gravity="center"
        android:backgroundTint="#fff111"
        android:visibility="invisible"
        />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_Phai"
        android:src="@drawable/chrome"
        android:layout_gravity="center"
        android:backgroundTint="#ff1d11"
        android:visibility="invisible"
        />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_Tren"
        android:src="@drawable/chrome"
        android:layout_gravity="center"
        android:backgroundTint="#11ff25"
        android:visibility="invisible"
        />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_Duoi"
        android:src="@drawable/chrome"
        android:layout_gravity="center"
        android:backgroundTint="#ff1119"
        android:visibility="invisible"
        />
</FrameLayout>